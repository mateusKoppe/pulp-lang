declare title to "Scope teste"
show title

declare message to "Say what one more Goddamn time"

show message

set message to input

show message

call setMessage "Does he looks like a bitch?"

show message

declare setMessage to function params newMessage do
  set message to newMessage
  show title
  declare anotherTitle to "Still working"

  declare setMessage to function do
    show title
    show anotherTitle
  done

  call setMessage
done
